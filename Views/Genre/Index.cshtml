@model IEnumerable<GamersPlace.Models.Genre>

@{
    ViewData["Title"] = "Genres settings :: GamersPlace";
}

<h1>Genres settings</h1>

<p>
    <a class="btn btn-sm btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverImageUrl)
            </td>
            <td>
                <a class="btn btn-sm btn-block btn-primary" asp-action="Edit" asp-route-id="@item.GenreId">Edit</a> 
                <a class="btn btn-sm btn-block btn-info" asp-action="Details" asp-route-id="@item.GenreId">Details</a> 
                <a class="btn btn-sm btn-block btn-danger" asp-action="Delete" asp-route-id="@item.GenreId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
