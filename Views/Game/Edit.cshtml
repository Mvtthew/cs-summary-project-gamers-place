@model GamersPlace.Controllers.Dto.CreateGameDto

@{
    ViewData["Title"] = "Game edit :: GamersPlace";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="game.GameId" />
            <div class="form-group">
                <label asp-for="game.Name" class="control-label"></label>
                <input asp-for="game.Name" class="form-control" />
                <span asp-validation-for="game.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.GameGenreId" class="control-label"></label>
                <select asp-for="game.GameGenreId" class="form-control">
                    <option value="">Choose a genre</option>
                    @foreach (var genre in Model.genres)
                    {
            <option value="@genre.GenreId">@genre.Name</option>
}
                </select>
                <span asp-validation-for="game.GameGenreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.Score" class="control-label"></label>
                <input asp-for="game.Score" class="form-control" />
                <span asp-validation-for="game.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.description" class="control-label"></label>
                <input asp-for="game.description" class="form-control" />
                <span asp-validation-for="game.description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.YearReleased" class="control-label"></label>
                <input asp-for="game.YearReleased" class="form-control" />
                <span asp-validation-for="game.YearReleased" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="game.CoverImageUrl" class="control-label"></label>
                <input asp-for="game.CoverImageUrl" class="form-control" />
                <span asp-validation-for="game.CoverImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
